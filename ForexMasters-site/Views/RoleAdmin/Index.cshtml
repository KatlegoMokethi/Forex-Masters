@model IEnumerable<IdentityRole>
<div class="container text-white pt-5">
    <div class="bg-primary m-1 p-1"><h4>Roles</h4></div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <table class="table table-sm table-bordered table-bordered">
        <tr>
            @*<th class="text-white">ID</th>*@
            <th class="text-white">Role Name</th>
            @*<th class="text-white">Users</th>*@
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center text-white">No Roles</td></tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    @*<td class="text-white">@role.Id</td>*@
                    <td class="text-white">@role.Name</td>
                    @*<td class="text-white" identity-role="@role.Id"></td>*@
                    <td class="text-white">
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit"
                               asp-route-id="@role.Id">List Users</a>
                            <button type="submit"
                                    class="btn btn-sm btn-danger">
                                Delete Role
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>