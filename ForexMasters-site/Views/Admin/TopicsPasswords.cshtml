@model IEnumerable<Topic>
<div class="container text-white pt-5">
    <h4 class="text-center text-primary font-weight-bold text-uppercase">Topics</h4>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <table class="table table-sm table-bordered">
        <tr>
            <th class="text-white">Topic</th>
            <th class="text-white">Password</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" class="text-center">No Topics Available</td></tr>
        }
        else
        {
            foreach (Topic topic in Model)
            {
                <tr>
                    <td class="text-white">@topic.Name</td>
                    <td class="text-white">@topic.Password</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="EditTopicPassword" asp-route-id="@topic.TopicID">
                            Modify
                        </a>
                    </td>
                </tr>
            }
        }
    </table>
</div>