@model IEnumerable<IdentityUser>
<div class="container text-white pt-5">
    <h1 class="text-center text-primary font-weight-bold text-uppercase">User Accounts</h1>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>


    @if (Model.Count() == 0)
    {
        <p class="text-center">No User Accounts</p>
    }
    else
    {
        foreach (IdentityUser user in Model)
        {
            <div>
                <p class="text-white">
                    @user.UserName
                    <br />
                    @user.Email
                </p>
                <form asp-action="Delete" asp-route-email="@user.Email" method="post">
                    @if (!string.Equals(user.UserName, "Admin"))
                    {
                        <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-email="@user.Email">
                            Edit
                        </a>

                        <button type="submit"
                                class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">
                            Edit
                        </a>
                    }
                </form>
                <hr class="bg-warning"/>
            </div>
        }
    }

