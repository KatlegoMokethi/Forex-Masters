@model Topic

@{
    ViewData["Title"] = "Topic";
}
<!-- TO DO: DONE -->
<div class="container pb-3 text-white">
    <h2 class="display-4 text-primary">@Model.Name</h2>
    @if (Model.Description != null)
    {
        <h4>Description:</h4>
        <p>@Model.Description</p>
    }
    <div id="documents">
        <h4>Document(s):</h4>
        <ul>
            @foreach (Document document in @ViewBag.Documents)
            {
                <li>
                    <a href="@document.FileURL">@document.Name</a>
                </li>
            }
        </ul>
    </div>
    <div id="videos">
        <h4>Presentation:</h4>
        @foreach (Video video in @ViewBag.Videos)
        {
            <video width="320" height="240" controls>
                <source src="@video.FileURL" type="video/mp4">
            </video>
        }
    </div>
</div>