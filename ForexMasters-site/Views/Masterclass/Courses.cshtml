@model IEnumerable<Category>

@{
    ViewData["Title"] = "Courses";
}
<!-- TO DO: DONE -->
    <div class="container pb-3  text-center">
        <h1 class="display-4 pb-3 text-primary">COURSES</h1>
        @if (Model.Count() > 0)
        {
            <div class="card-columns d-flex justify-content-center">
                @foreach (Category category in Model)
                {
                    <div class="card" style="background-color:black;">
                        <div class="card-body">
                            <span class="fa fa-folder fa-10x" style="color: white;"></span>
                            <div class="card-text">
                                <h3>
                                    <a asp-controller="Masterclass" asp-action="Topics" asp-route-id="@category.CategoryID">@category.CategoryName</a>
                                </h3>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center">No courses available as yet!</p>
        }
    </div>