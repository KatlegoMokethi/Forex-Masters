@model IEnumerable<Document>

@{
    ViewData["Title"] = "PDFs";
}
<!-- TO DO: DONE -->
<div class="container pb-3">
    <h1 class="text-center text-primary font-weight-bold">PDFs</h1>

    @if (Model.Count() > 0)
    {
        @foreach (Document doc in Model)
        {
            <a href="@doc.FileURL">
                @doc.Name 
            </a>
            @if (User.IsInRole("Admin"))
            {
                <form asp-action="DeletePDF" asp-controller="Admin" asp-route-id="@doc.DocumentID" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        @*<i class="fa fa-minus-circle"></i>*@
                        (Delete)
                    </button>
                </form>
            }
            <br />
        }
    }
    else
    {
        <p class="text-center">No PDFs available as yet!</p>
    }
</div>